{
  "name": "mestring",
  "private": true,
  "workspaces": [
    "apps/web",
    "apps/api"
  ],
  "overrides": {
    "esbuild": "0.24.4"
  },
  "scripts": {
    "dev:web": "npm --workspace apps/web run dev",
    "dev:api": "npm --workspace apps/api run dev",
    "dev": "npm run dev:api & npm run dev:web",
    "build": "npm --workspace apps/web run build && npm --workspace apps/api run build",
    "format": "prettier -w .",
    "lint": "eslint ."
  },
  "devDependencies": {
    "eslint": "^9.13.0",
    "prettier": "^3.3.3"
  }
}